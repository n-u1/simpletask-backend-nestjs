# Database
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=simpletask
DB_HOST=simpletask-nestjs-db
DB_PORT=5432
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

CLI_DB_HOST=localhost
CLI_DB_PORT=5432

# Redis
REDIS_HOST=simpletask-nestjs-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0
REDIS_POOL_SIZE=5

# JWT
JWT_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY_MINIMUM_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Argon2
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=1
ARGON2_HASH_LENGTH=32
ARGON2_SALT_LENGTH=16

# Application
NODE_ENV=development
PORT=8000
LOG_LEVEL=info
DEBUG=true

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5
